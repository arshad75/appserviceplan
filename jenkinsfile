```yaml
name: Node.js CI/CD Pipeline

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

stages:
  build:
    jobs:
      build:
        runs-on: ubuntu-latest
        steps:
          - uses: actions/checkout@v2
          - uses: actions/setup-node@v1
            with:
              node-version: 16
          - run: npm ci
          - run: npm run build
          - persist:
              paths:
                - dist/
          - store_artifacts:
              path: dist/
              name: build_artifacts

  test:
    jobs:
      test:
        needs: build
        runs-on: ubuntu-latest
        steps:
          - uses: actions/checkout@v2
          - uses: actions/setup-node@v1
            with:
              node-version: 16
          - restore:
              path: dist/
          - run: npm run test

  deploy:
    jobs:
      deploy:
        needs: test
        runs-on: ubuntu-latest
        steps:
          - uses: actions/checkout@v2
          - restore:
              path: dist/
          - run: aws s3 cp dist s3://my-bucket/dist

  clean:
    jobs:
      clean:
        runs-on: ubuntu-latest
        steps:
          - uses: actions/checkout@v2
          - restore:
              path: dist/
          - run: rm -rf dist
```